<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_idil_project_task_tree" model="ir.ui.view">
            <field name="name">idil.project.task.tree</field>
            <field name="model">idil.project.task</field>
            <field name="arch" type="xml">
                <tree string="Project Tasks">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="assigned_to"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="status"/>
                    <field name="milestone"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_idil_project_task_form" model="ir.ui.view">
            <field name="name">idil.project.task.form</field>
            <field name="model">idil.project.task</field>
            <field name="arch" type="xml">
                <form string="Project Task" create="true" edit="true">
                    <header>
                        <button name="set_to_in_progress" type="object" string="Start" class="btn-primary"/>
                        <button name="set_to_done" type="object" string="Mark Done" class="btn-success"/>
                        <field name="status" widget="statusbar" statusbar_visible="not_started,in_progress,done"/>
                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="project_id"/>
                                <field name="parent_task_id"/>
                                <field name="milestone"/>
                            </group>
                            <group>
                                <field name="assigned_to"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                        <field name="activity_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_idil_project_task" model="ir.actions.act_window">
            <field name="name">Project Tasks</field>
            <field name="res_model">idil.project.task</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first project task
                </p>
            </field>
        </record>


    </data>
</odoo>
