<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- BASE VIEWS (if you don't have them yet, include these) -->
  <record id="view_travel_ticket_reservation_tree" model="ir.ui.view">
    <field name="name">travel.ticket.reservation.tree</field>
    <field name="model">travel.ticket.reservation</field>
    <field name="arch" type="xml">
      <tree string="Ticket Reservations" default_order="id desc">
        <field name="name"/>
        <field name="trip_type"/>
        <field name="passenger_name"/>
        <field name="from_city"/>
        <field name="to_city"/>
        <field name="departure_date"/>
        <field name="arrival_date"/>
        <field name="reservation_status"/>
        <field name="screen_status"/>
        <field name="ticket_fee"/>
        <field name="invoice_state"/>
      </tree>
    </field>
  </record>

  <record id="view_travel_ticket_reservation_form" model="ir.ui.view">
    <field name="name">travel.ticket.reservation.form</field>
    <field name="model">travel.ticket.reservation</field>
    <field name="arch" type="xml">
      <form string="Ticket Reservation">
        <header>
          <button name="action_set_draft" type="object" string="Set Draft"
                   />
          <button name="action_approve" type="object" string="Approve"
                  class="btn-primary"  />
          <button name="action_cancel" type="object" string="Cancel"
                  class="btn-secondary"/>

          <!-- Invoicing -->
          <button name="action_create_invoice" type="object" string="Create Invoice"
                  class="btn-primary"  />
          <button name="action_view_invoice" type="object" string="View Invoice"
                  class="oe_stat_button"  />

          <field name="screen_status" widget="statusbar" statusbar_visible="draft,approved,canceled"/>
        </header>

        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="trip_type"/>
              <field name="ticket_type"/>
            </group>
            <group>
              <field name="passenger_name"/>
              <field name="passport_no"/>
              <field name="passport_country"/>
              <field name="contact_no"/>
            </group>
          </group>

          <group string="Route">
            <group>
              <field name="from_city"/>
              <field name="to_city"/>
            </group>
            <group>
              <field name="departure_date"/>
              <field name="departure_time"/>
              <field name="arrival_date"/>
              <field name="arrival_time"/>
            </group>
          </group>

          <!-- Billing / Invoicing -->
          <group string="Billing">
            <group>
              <field name="customer_id"  />
              <field name="product_id"  />
            </group>
            <group>
              <field name="currency_id"/>
              <field name="ticket_fee"/>
            </group>
          </group>

          <group string="Invoice">
            <field name="invoice_id" readonly="1" context="{'form_view_ref':'account.view_move_form'}"/>
            <field name="invoice_state" readonly="1"/>
          </group>

          <notebook>
            <page string="Notes  Attachments">
              <group>
                <field name="description"/>
                <field name="attachment_file" filename="attachment_filename"/>
                <field name="attachment_filename"/>
              </group>
              <chatter/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action + Menu -->
  <record id="action_travel_ticket_reservation" model="ir.actions.act_window">
    <field name="name">Ticket Reservations</field>
    <field name="res_model">travel.ticket.reservation</field>
    <field name="view_mode">tree,form</field>
  </record>


</odoo>
