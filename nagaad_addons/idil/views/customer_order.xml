<odoo>
    <record id="view_customer_place_order_form" model="ir.ui.view">
        <field name="name">idil.customer.place.order.form</field>
        <field name="model">idil.customer.place.order</field>
        <field name="arch" type="xml">
            <form string="Customer Place Order">
                <sheet>
                    <group>
                        <field name="customer_id"/>
                        <field name="order_date"/>
                        <field name="waiter_id"/>
                        <field name="order_mode"/>
                        <field name="table_no"/>

                        <field name="currency_id"/>
                        <field name="total_quantity"/>
                        <field name="total_price"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_lines">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="currency_id"/>
                                    <field name="quantity"/>
                                    <field name="menu_id"/>
                                    <field name="sale_price" sum="total"/>
                                    <field name="line_total" sum="total"/>

                                    <field name="status"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_customer_place_order_tree" model="ir.ui.view">
        <field name="name">idil.customer.place.order.tree</field>
        <field name="model">idil.customer.place.order</field>
        <field name="arch" type="xml">
            <tree string="Customer Orders">
                <field name="customer_id"/>
                <field name="order_date"/>
                <field name="customer_id"/>
                <field name="currency_id"/>
                <field name="waiter_id"/>
                <field name="order_mode"/>
                <field name="table_no"/>
                <field name="total_quantity" sum="total"/>
                <field name="total_price" sum="total"/>
                <field name="state"/>
                <field name="confirmed_by"/>
                <field name="confirmed_at"/>
                <field name="paid_amount"/>
                <field name="balance_due"/>
                <field name="payment_status"/>
            </tree>
        </field>
    </record>

    <!-- Customer Place Order Action -->
    <record id="action_customer_place_order" model="ir.actions.act_window">
        <field name="name">Customer Place Orders</field>
        <field name="res_model">idil.customer.place.order</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>

    <!-- Customer Place Order Menu -->

</odoo>
