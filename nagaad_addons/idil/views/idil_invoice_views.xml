<odoo>
    <!-- Form -->
    <record id="view_idil_invoice_form" model="ir.ui.view">
        <field name="name">idil.invoice.form</field>
        <field name="model">idil.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice">
                <sheet>
                    <header>
                        <button name="action_print_pdf" type="object" class="btn-secondary" string="Print (PDF)"/>
                        <button name="action_post" type="object" string="Post" class="btn-primary"/>
                        <button name="action_reset_to_draft" type="object" string="Set to Draft"/>
                        <button name="action_cancel" type="object" string="Cancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancel"/>
                    </header>

                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="company_id"/>
                            <field name="customer_id" options="{'no_create': False}"/>
                            <field name="invoice_date"/>
                            <field name="currency_id"/>
                            <field name="user_id"/>
                            <field name="ref"/>
                        </group>
                        <group>
                            <field name="amount_untaxed" readonly="1"/>
                            <field name="amount_tax" readonly="1"/>
                            <field name="amount_total" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Lines">
                            <field name="line_ids" context="{'default_invoice_id': active_id}">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_percent"/>
                                    <field name="subtotal" readonly="1"/>
                                    <field name="tax_amount" readonly="1"/>
                                    <field name="total" readonly="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="tax_percent"/>
                                        <field name="subtotal" readonly="1"/>
                                        <field name="tax_amount" readonly="1"/>
                                        <field name="total" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Reservations">
                            <field name="reservation_ids" readonly="1" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="from_city"/>
                                    <field name="to_city"/>
                                    <field name="ticket_fee"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Notes">
                            <field name="narration"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree -->
    <record id="view_idil_invoice_tree" model="ir.ui.view">
        <field name="name">idil.invoice.tree</field>
        <field name="model">idil.invoice</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state"/>
                <field name="customer_id"/>
                <field name="invoice_date"/>
                <field name="amount_total"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Search -->
    <record id="view_idil_invoice_search" model="ir.ui.view">
        <field name="name">idil.invoice.search</field>
        <field name="model">idil.invoice</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="state"/>
                <field name="invoice_date"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Posted" name="posted" domain="[('state','=','posted')]"/>
                <filter string="Canceled" name="cancel" domain="[('state','=','cancel')]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by':'customer_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Company" name="group_company" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action + Menus -->
    <record id="action_idil_invoice" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">idil.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>


</odoo>
