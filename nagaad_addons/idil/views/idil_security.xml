<odoo>
    <data noupdate="1">

        <!-- Record Rule: Restrict halls to active company only -->
        <record id="idil_hall_company_rule" model="ir.rule">
            <field name="name">Hall - Only Own Company</field>
            <field name="model_id" ref="idil.model_idil_hall"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

    </data>
</odoo>
