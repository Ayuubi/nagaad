<odoo>
    <data>

        <!-- Action -->
        <record id="action_idil_project_resource" model="ir.actions.act_window">
            <field name="name">Resource Assignments</field>
            <field name="res_model">idil.project.resource</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Assign employees, equipment, and materials to projects here.
                </p>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_idil_project_resource_tree" model="ir.ui.view">
            <field name="name">idil.project.resource.tree</field>
            <field name="model">idil.project.resource</field>
            <field name="arch" type="xml">
                <tree string="Project Resources">
                    <field name="project_id"/>
                    <field name="employee_id"/>
                    <field name="role"/>
                    <field name="assignment_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_idil_project_resource_form" model="ir.ui.view">
            <field name="name">idil.project.resource.form</field>
            <field name="model">idil.project.resource</field>
            <field name="arch" type="xml">
                <form string="Resource Assignment">
                    <sheet>
                        <h1>
                            <field name="employee_id"/>
                        </h1>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="role"/>
                                <field name="assignment_date"/>
                            </group>
                            <group>
                                <field name="equipment"/>
                                <field name="material"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
