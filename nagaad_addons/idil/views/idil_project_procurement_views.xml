<odoo>
    <data>

        <!-- Action -->
        <record id="action_idil_project_procurement" model="ir.actions.act_window">
            <field name="name">Procurement Plans</field>
            <field name="res_model">idil.project.procurement</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Track procurement of items per project here.
                </p>
            </field>
        </record>

        <!-- Menu Item -->


        <!-- Tree View -->
        <record id="view_idil_project_procurement_tree" model="ir.ui.view">
            <field name="name">idil.project.procurement.tree</field>
            <field name="model">idil.project.procurement</field>
            <field name="arch" type="xml">
                <tree string="Procurement Plans">
                    <field name="project_id"/>
                    <field name="item"/>
                    <field name="vendor_id"/>
                    <field name="quantity"/>
                    <field name="expected_date"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_idil_project_procurement_form" model="ir.ui.view">
            <field name="name">idil.project.procurement.form</field>
            <field name="model">idil.project.procurement</field>
            <field name="arch" type="xml">
                <form string="Procurement Plan">
                    <sheet>
                        <h1>
                            <field name="item"/>
                        </h1>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="vendor_id"/>
                                <field name="quantity"/>
                            </group>
                            <group>
                                <field name="expected_date"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
