<odoo>
    <record id="seq_commission" model="ir.sequence">
        <field name="name">Commission</field>
        <field name="code">idil.commission</field>
        <field name="prefix">COM-</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
    </record>
    <!-- Sequence for Hall Booking -->
    <record id="seq_hall_booking" model="ir.sequence">
        <field name="name">Hall Booking Sequence</field>
        <field name="code">idil.hall.booking</field>
        <field name="prefix">HB</field>
        <field name="padding">4</field>

        <field name="number_increment">1</field>
    </record>


    <!-- Define the sequence for project payment -->
    <record id="seq_idil_project_payment" model="ir.sequence">
        <field name="name">Project Payment Reference</field>
        <field name="code">idil.project.payment</field>
        <field name="prefix">PP-</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
        <field name="use_date_range">False</field>
    </record>
<!-- Daily Reset Sequence for Customer Place Order -->
    <record id="seq_customer_place_order_daily" model="ir.sequence">
      <field name="name">Customer Place Order Daily Serial</field>
      <field name="code">idil.customer.place.order.sl</field>
      <field name="prefix"></field>
      <field name="padding">3</field>
      <field name="number_next_actual">1</field>
      <field name="use_date_range">True</field>
      <field name="company_id" eval="False"/>
    </record>

</odoo>
